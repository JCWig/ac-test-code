{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jasmine": true
  },

  "ecmaFeatures": {
    "modules": true
  },

  "rules": {

    // style rules
    "indent" : [2, 2],
    "brace-style": [2, "1tbs"],
    "eol-last": 0,
    "max-nested-callbacks": [1, 3],
    "new-cap": [2, { "newIsCap": true, "capIsNew": true } ],
    "new-parens": 2,
    "no-array-constructor": 2,
    "no-lonely-if": 2,
    "no-multiple-empty-lines": [1, { "max": 1 } ],
    "no-nested-ternary": 2,
    "no-new-object": 2,
    "no-spaced-func": 2,
    "no-trailing-spaces": 2,
    "no-underscore-dangle": 2,
    "one-var": 0,
    "quote-props": [2, "as-needed"],
    "quotes": [2, "single"],
    "space-after-keywords": [2, "always"],
    "space-before-blocks": [2, "always"],
    "space-before-function-paren": [2, "never"],
    "space-in-brackets": 0,
    "space-in-parens": 0,
    "space-return-throw-case": 2,
    "space-unary-ops": [2, { "words": true, "nonwords": false }],
    "spaced-line-comment": 0,

    // legacy
    "max-len": [1, 100, 2],

    // possible errors
    "no-console": 1,
    "no-debugger": 1,
    "no-alert": 1,
    "no-constant-condition": 2,
    "no-control-regex": 2,
    "no-dupe-keys": 2,
    "no-empty": 1,
    "no-empty-character-class": 1,
    "no-ex-assign": 2,
    "no-extra-parens": 1,
    "no-extra-semi": 1,
    "no-func-assign": 2,
    "no-invalid-regexp": 2,
    "no-obj-calls": 2,
    "no-sparse-arrays": 2,
    "no-unreachable": 2,
    "use-isnan": 2,
    "valid-jsdoc": [1, { "requireReturn": false } ],

    // best practices
    "consistent-return": 2,
    "eqeqeq": [2, "smart"],
    "guard-for-in": 2,
    "no-caller": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-bind": 1,
    "no-floating-decimal": 1,
    "no-implied-eval": 2,
    "no-iterator": 2,
    "no-labels": 2,
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-multi-spaces": 2,
    "no-multi-str": 2,
    "no-native-reassign": 2,
    "no-new": 2,
    "no-new-func": 2,
    "no-new-wrappers": 2,
    "no-octal": 2,
    "no-octal-escape": 2,
    "no-proto": 2,
    "no-redeclare": 2,
    "no-return-assign": 2,
    "no-script-url": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-throw-literal": 2,
    "no-unused-expressions": [2, { "allowShortCircuit": true, "allowTernary": true }],
    "no-void": 2,
    "no-with": 2,
    "radix": 2,
    "vars-on-top": 2,

    // variables
    "no-delete-var": 2,
    "no-shadow": 2,
    "no-shadow-restricted-names": 2,
    "no-undef-init": 2,
    "no-unused-vars": [1, { "vars": "all", "args": "after-used" } ],
    "no-use-before-define": [2, "nofunc"]

  }
}
